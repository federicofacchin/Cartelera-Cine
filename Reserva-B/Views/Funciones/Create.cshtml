@model NT1_2022_1C_B_G2.Models.Funcion

@{
    ViewData["Title"] = "Create";
}

<h1 style="color:white">Crear Funcion</h1>

<hr />
<div class="row">
    <div class="col-md-4 bg-dark align-content-center" style="color:white">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaYHora" class="control-label"></label>
                <input asp-for="FechaYHora" class="form-control" />
                <span asp-validation-for="FechaYHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaId" class="control-label"></label>
                <select asp-for="SalaId" class ="form-control" asp-items="ViewBag.SalaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PeliculaId" class="control-label"></label>
                <select asp-for="PeliculaId" class ="form-control" asp-items="ViewBag.PeliculaId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                   <input class="form-check-input" asp-for="Confirmada" /> @Html.DisplayNameFor(model => model.Confirmada)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-info" style="color:white"/>
                <input type="button" value="Volver" class="btn btn-outline-info"style="color:white" onclick="location.href='@Url.Action("Index", "Funciones")'" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
