@using Microsoft.AspNetCore.Identity
@inject SignInManager<Persona> signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ORT-CINEMA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    
    <style>body {  
        background-image:linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),url("/img/popcorn.jpg");
        font-family:'Century Schoolbook';
    }</style>
</head>
<body>
    <header>
        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-c bg-dark border-bottom box-shadow mb-3" >
            <div class="container">
               <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                   <img src="~/img/logo.png" width="50px"/>
               </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">

                        @if (signInManager.IsSignedIn(User) && (User.IsInRole("Cliente")))
                        {
                            <li class="nav-item mx-1">
                                <a class="btn btn-outline-info btn-sm" style="color:white" asp-area="" asp-controller="Home" asp-action="Index">Cartelera</a>
                            </li>
                            <li class="nav-item mx-1">
                                <a class="btn btn-outline-info btn-sm"  style="color:white" asp-area="" asp-controller="Reservas" asp-action="Index">Mis Reservas</a>
                            </li>
                            <li class="nav-item mx-1">
                                <a class="btn btn-outline-info btn-sm" style="color:white" asp-area="" asp-controller="Clientes" asp-action="MiPerfil">Mi Perfil</a>
                            </li>                      
                        }

                        @if (signInManager.IsSignedIn(User) && (User.IsInRole("Empleado")))
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-info btn-sm m1 mx-1"  style="color:white" asp-area="" asp-controller="Home" asp-action="Index">Cartelera</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-info btn-sm m1 mx-1" style="color:white" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-info btn-sm m1 mx-1"  style="color:white" asp-area="" asp-controller="Empleados" asp-action="Index">Empleados</a>
                            </li>   
                            <li class="nav-item">
                                <a class="btn btn-outline-info btn-sm m1 mx-1" style="color:white" asp-area="" asp-controller="Funciones" asp-action="Index">Funciones</a>
                            </li> 
                            <li class="nav-item">
                                <a class="btn btn-outline-info btn-sm m1 mx-1" style="color:white" asp-area="" asp-controller="Peliculas" asp-action="Index">Peliculas</a>
                            </li> 
                            <li class="nav-item">
                                <a class="btn btn-outline-info btn-sm m1 mx-1" style="color:white" asp-area="" asp-controller="Salas" asp-action="Index">Salas</a>
                            </li> 
                            <li class="nav-item">
                                <a class="btn btn-outline-info btn-sm m1 mx-1" style="color:white" asp-area="" asp-controller="Generos" asp-action="Index">Genero</a>
                            </li> 
                            <li class="nav-item">
                                <a class="btn btn-outline-info btn-sm m1 mx-1"  style="color:white" asp-area="" asp-controller="TipoSalas" asp-action="Index">TipoSalas</a>
                            </li> 
                             <li class="nav-item">
                                <a class="btn btn-outline-info btn-sm m1 mx-1" style="color:white" asp-area="" asp-controller="Reservas" asp-action="Index">Reservas</a>
                            </li> 
                            <li class="nav-item">
                                <a class="btn btn-outline-info btn-sm m1 mx-1" style="color:white" asp-area="" asp-controller="Empleados" asp-action="Create">Alta Empleado</a>
                            </li> 
                        }
                  
                        @if (signInManager.IsSignedIn(User) && (User.IsInRole("Administrador")))
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-info btn-sm m1 mx-1" style="color:white" asp-area="" asp-controller="Home" asp-action="Index">Cartelera</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-info btn-sm m1 mx-1" style="color:white" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-info btn-sm m1 mx-1" style="color:white" asp-area="" asp-controller="Empleados" asp-action="Index">Empleados</a>
                            </li>   
                            <li class="nav-item">
                                <a class="btn btn-outline-info btn-sm m1 mx-1" style="color:white" asp-area="" asp-controller="Funciones" asp-action="Index">Funciones</a>
                            </li> 
                            <li class="nav-item">
                                <a class="btn btn-outline-info btn-sm m1 mx-1" style="color:white" asp-area="" asp-controller="Peliculas" asp-action="Index">Peliculas</a>
                            </li> 
                            <li class="nav-item">
                                <a class="btn btn-outline-info btn-sm m1 mx-1" style="color:white" asp-area="" asp-controller="Salas" asp-action="Index">Salas</a>
                            </li> 
                            <li class="nav-item">
                                <a class="btn btn-outline-info btn-sm m1 mx-1" style="color:white" asp-area="" asp-controller="Generos" asp-action="Index">Genero</a>
                            </li> 
                            <li class="nav-item">
                                <a class="btn btn-outline-info btn-sm m1 mx-1" style="color:white" asp-area="" asp-controller="TipoSalas" asp-action="Index">TipoSalas</a>
                            </li> 
                             <li class="nav-item">
                                <a class="btn btn-outline-info btn-sm m1 mx-1" style="color:white" asp-area="" asp-controller="Reservas" asp-action="Index">Reservas</a>
                            </li> 
                            <li class="nav-item">
                                <a class="btn btn-outline-info btn-sm m1 mx-1" style="color:white" asp-area="" asp-controller="Empleados" asp-action="Create">Alta Empleado</a>
                            </li>                         
                        }
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="btn btn-danger btn-sm m1 mx-1" style="color:white" asp-area="" asp-controller="Account" asp-action="CerrarSesion">Cerrar Sesion</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-warning btn-sm m1 mx-1" style="color:white" asp-area="" asp-controller="Account" asp-action="Registrar">Registrar</a>
                            </li>
                            
                            <li class="nav-item">
                                <a class="btn btn-success btn-sm m1 mx-1" style="color:white" asp-area="" asp-controller="Account" asp-action="IniciarSesion">Iniciar Sesion</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" >
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <span style="color:white">2022 - Reservas Grupo 2B- All rights reseved ©.</span>
            <a class="btn btn-sm btn-info" asp-action="CargaBase" asp-controller="PreCarga">PreCargaDb</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
