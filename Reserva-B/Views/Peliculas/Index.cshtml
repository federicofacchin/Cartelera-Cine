@model IEnumerable<NT1_2022_1C_B_G2.Models.Pelicula>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center" style="color: white">Peliculas</h1>
<br />
<h4 class="text-center">
    <a class="btn btn-outline-info" style="color:white" asp-action="Create">Crear Película</a>
</h4>



<table class="table table-striped table-borderless table-dark" style="border-radius: 40px 40px 40px 40px; text-indent: 10%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" style="color:aqua">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" style="color:aqua">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" style="color:aqua">Borrar</a>   |
                <a asp-action="FuncionesActivas" asp-route-id="@item.Id" style="color:aqua">Funciones Activas</a> |
                <a asp-action="Balance" asp-route-id="@item.Id" style="color:aqua">Balance</a>
            </td>
        </tr>
}
    </tbody>
</table>
