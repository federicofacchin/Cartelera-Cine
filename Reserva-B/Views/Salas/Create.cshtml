@model NT1_2022_1C_B_G2.Models.Sala

@{
    ViewData["Title"] = "Create";
}

<h1 style="color:white">Crear Sala</h1>

<hr />
<div class="row">
    <div class="col-md-4 bg-dark align-content-center" style="color:white">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacidadButacas" class="control-label"></label>
                <input asp-for="CapacidadButacas" class="form-control" />
                <span asp-validation-for="CapacidadButacas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoSalaId" class="control-label"></label>
                <select asp-for="TipoSalaId" class ="form-control" asp-items="ViewBag.TipoSalaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-info" style="color:white" />
                <input type="button" value="Volver" class="btn btn-outline-info" style="color:white" onclick="location.href='@Url.Action("Index", "Salas")'" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
