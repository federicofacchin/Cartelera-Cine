@model NT1_2022_1C_B_G2.Models.Genero

@{
    ViewData["Title"] = "Filtrar";
}


<div class="row">
    <div class="col-md-4 bg-dark" style="color:white">
        <h4 style="color: white">Seleccione el genero</h4>
        <hr />
        <form asp-action="PorGenero">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <select asp-for="Id" class="form-control" asp-items="ViewBag.GeneroId"></select>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Filtrar" class="btn btn-outline-info" />
                <input type="button" value="Volver" class="btn btn-outline-info" onclick="location.href='@Url.Action("Index", "Home")'" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
